extends layout

block content
  h1= title
  - const image_names = ['hat1.png', 'hat2.jpg', 'hat3.png', 'hat4.png', 'hat5.png']
  - for (let i = 0; i < 3; i++)
    - const randomIndex = Math.floor(Math.random() * 5)
    img(src=`/images/${image_names[randomIndex]}`, alt=`Image ${image_names[randomIndex]}`, width="300", height="300")
